<Window x:Class="TestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestClient"
        mc:Ignorable="d"
        Title="Bluetooth Client" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Bluetooth Client" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Scan" Width="100" Margin="0,0,0,10" Click="Button_Click"/>
            <ListBox x:Name="lb" Width="200" Height="200" Margin="0,0,0,10"/>
            <Button Content="Connect" Width="100" Margin="0,0,0,10" Click="Button_Click_1"/>
            <TextBox x:Name="r" Width="200" Height="100" Margin="0,0,0,10"/>
            <TextBox x:Name="s" Width="200" Height="100" Margin="0,0,0,10"/>
            <Button Content="Send" Width="100" Margin="0,0,0,10" Click="Button_Click_2"/>
        </StackPanel>
    </Grid>
</Window>
