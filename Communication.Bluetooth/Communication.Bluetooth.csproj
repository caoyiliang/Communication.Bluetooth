<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net9.0;net8.0</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<LangVersion>default</LangVersion>
		<PackageId>CSoft.Communication.Bluetooth</PackageId>
		<Title>通讯库蓝牙拓展</Title>
		<Version>9.0.0</Version>
		<Authors>CSoft</Authors>
		<PackageIcon>logo.png</PackageIcon>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<RepositoryUrl>https://github.com/caoyiliang/Communication.Bluetooth</RepositoryUrl>
		<PackageReleaseNotes>更新.net9.0</PackageReleaseNotes>
		<PackageProjectUrl>https://github.com/caoyiliang/Communication.Bluetooth</PackageProjectUrl>
	</PropertyGroup>

	<ItemGroup>
	  <None Include="..\logo.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="CSoft.TopPortLib" Version="9.0.0" />
		<PackageReference Include="InTheHand.Net.Bluetooth" Version="4.1.44" />
	</ItemGroup>

</Project>
